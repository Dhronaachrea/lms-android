<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tele_cash_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/ed_mobile_number"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/withdraw_amnt_bg"
            android:hint="mobile number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="10"
            android:padding="@dimen/_6sdp"
            android:textColor="@color/txn_date_text_color"
            android:textColorHint="@color/edit_text_underline_color_d"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_20sdp">


            <requestFocus />
        </EditText>

        <com.skilrock.customui.CustomTextView
            android:id="@+id/txt_submit"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/activity_button_bg"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp"
            android:text="Submit"
            android:textColor="@color/activity_button_text_color"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tele_cash_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="txn_amount" />

            <EditText
                android:id="@+id/txn_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="7"
                android:background="@drawable/withdraw_amnt_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"

                android:focusableInTouchMode="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="fee_amount" />

            <EditText
                android:id="@+id/feeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="7"
                android:background="@drawable/withdraw_amnt_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="total_amount" />

            <EditText
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="7"
                android:background="@drawable/withdraw_amnt_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>


        <EditText
            android:id="@+id/otp_second"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/withdraw_amnt_bg"
            android:hint="otp"
            android:inputType="number"
            android:maxLength="10"
            android:padding="@dimen/_6sdp"
            android:textColor="@color/txn_date_text_color"
            android:textColorHint="@color/edit_text_underline_color_d"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_20sdp" />


        <com.skilrock.customui.CustomTextView
            android:id="@+id/txt_submit_second"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/activity_button_bg"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp"
            android:text="Submit"
            android:textColor="@color/activity_button_text_color"
            android:textSize="@dimen/_18sdp" />


    </LinearLayout>

</LinearLayout>