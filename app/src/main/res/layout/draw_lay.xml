<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draw_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <com.skilrock.customui.CustomTextView
                android:id="@+id/draw_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BONANZA"
                android:textColor="@color/five_color_one"
                android:textSize="15sp" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/draw_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="25 Dec 2014"
                android:textColor="@color/five_color_one"
                android:textSize="15sp" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/draw_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="22:10 PM"
                android:textColor="@color/five_color_one"
                android:textSize="15sp" />
        </LinearLayout>

        <com.skilrock.customui.CustomTextView
            android:id="@+id/draw_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="right"
            android:text="Lost"
            android:textColor="@color/five_color_one"
            android:textSize="15sp" />
    </LinearLayout>

    <com.skilrock.customui.CustomTextView
        android:id="@+id/draw_divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/five_color_two"
        android:text="@string/bet_detail_draw_lay" />

</LinearLayout>