<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:textColor="@color/buy_option_d_color">

    <LinearLayout
        android:id="@+id/sub_lay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/fast_game_nos_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:textColor="@color/buy_option_d_color">

        <com.skilrock.customui.CustomTextView
            android:id="@+id/fast_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="01"
            android:textColor="@color/fast_nos_bg_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fast_game_nos_sub_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.skilrock.customui.CustomTextView
                android:id="@+id/no_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="2dp"
                android:text="01"
                android:textColor="@color/fast_nos_text_color"
                android:textSize="22sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>