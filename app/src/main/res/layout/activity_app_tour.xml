<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <com.skilrock.banner.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/done"
        android:layout_gravity="bottom|end"
        android:padding="10dip"
        app:fillColor="@color/jublee_mon_direct"
        app:pageColor="@color/white" />

    <com.skilrock.customui.RobotoButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5.5"
        android:background="@drawable/mytransactions_button_bg"
        android:padding="@dimen/_5sdp"
        android:text="START NOW!!!"
        android:textColor="@color/profile_text_btn"
        android:textSize="@dimen/_15sdp"
        android:visibility="invisible"
        app:typeface="roboto_light" />
</RelativeLayout>