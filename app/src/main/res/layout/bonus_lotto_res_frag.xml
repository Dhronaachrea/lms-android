<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/scratch_theme_color">

            <RelativeLayout
                android:id="@+id/data_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/scratch_theme_color">

                <LinearLayout
                    android:id="@+id/result_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bonus_result_header_bg_color"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <com.skilrock.customui.CustomTextView
                            android:id="@+id/draw_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="Wed, 24 Sept 2014"
                            android:textColor="#fff"
                            android:visibility="gone" />

                        <com.skilrock.customui.CustomTextView
                            android:id="@+id/draw_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/imageView1"
                            android:text="@string/last_draw_bonus_game"
                            android:textColor="@color/bonus_result_header_text_color"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bonus_result_ball_bg_color"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <LinearLayout
                            android:id="@+id/win_num_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bonus_last_bg_color"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.skilrock.customui.CustomTextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/result_ball_scr"
                                android:gravity="center"
                                android:text="@string/nos_bonus_game"
                                android:textColor="@color/five_last_no_txt_color"
                                android:textSize="@dimen/result_ball_tx_sz" />

                            <com.skilrock.customui.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/result_ball_scr"
                                android:gravity="center"
                                android:text="@string/nos_bonus_game"
                                android:textColor="@color/five_last_no_txt_color"
                                android:textSize="@dimen/result_ball_tx_sz" />

                            <com.skilrock.customui.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/result_ball_scr"
                                android:gravity="center"
                                android:text="@string/nos_bonus_game"
                                android:textColor="@color/five_last_no_txt_color"
                                android:textSize="@dimen/result_ball_tx_sz" />

                            <com.skilrock.customui.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/result_ball_scr"
                                android:gravity="center"
                                android:text="@string/nos_bonus_game"
                                android:textColor="@color/five_last_no_txt_color"
                                android:textSize="@dimen/result_ball_tx_sz" />

                            <com.skilrock.customui.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/result_ball_scr"
                                android:gravity="center"
                                android:text="@string/nos_bonus_game"
                                android:textColor="@color/five_last_no_txt_color"
                                android:textSize="@dimen/result_ball_tx_sz" />

                            <com.skilrock.customui.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/result_ball_scr"
                                android:gravity="center"
                                android:text="@string/nos_bonus_game"
                                android:textColor="@color/five_last_no_txt_color"
                                android:textSize="@dimen/result_ball_tx_sz" />

                            <com.skilrock.customui.CustomTextView
                                android:layout_width="@dimen/result_ball_wh"
                                android:layout_height="@dimen/result_ball_wh"
                                android:layout_margin="2dp"
                                android:background="@drawable/result_ball_scr_bonus"
                                android:gravity="center"
                                android:text="@string/nos_bonus_game"
                                android:textColor="@color/white"
                                android:textSize="@dimen/result_ball_tx_sz" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/match_bonus_game"
                android:textColor="@color/bonus_result_type_text_color"
                android:textSize="@dimen/bonus_lotto_res_frag_tx_sz"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/winner_bonus_game"
                android:textColor="@color/bonus_result_type_text_color"
                android:textSize="@dimen/bonus_lotto_res_frag_tx_sz"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/amount_bonus_game"
                android:textColor="@color/bonus_result_type_text_color"
                android:textSize="@dimen/bonus_lotto_res_frag_tx_sz"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/item_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:listSelector="@android:color/transparent"></ListView>
    </LinearLayout>

</RelativeLayout>