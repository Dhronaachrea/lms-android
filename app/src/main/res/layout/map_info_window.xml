<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:paddingBottom="3dip"
        android:paddingLeft="13dip"
        android:paddingRight="3dip" >

        <com.skilrock.customui.CustomTextView
            android:id="@+id/mapfirstLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dip"
            android:text="Africa Lotto"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <com.skilrock.customui.CustomTextView
            android:id="@+id/mapaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dip"
            android:text="234, Vidnawa Lotto Harare"
            android:textColor="#FFFFFF" />

        <com.skilrock.customui.CustomTextView
            android:id="@+id/mapcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dip"
            android:text="33849085957, 347867434874"
            android:textColor="#FFFFFF" />

        <com.skilrock.customui.CustomTextView
            android:id="@+id/mapemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dip"
            android:text="mail@lotto.com"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>