<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_list"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    
    android:layout_gravity="start"
    android:background="@color/second_half_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_info" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/first_half_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <com.skilrock.customui.CircleImageView
                android:id="@+id/user_pic"
                android:layout_width="@dimen/profile_pic_size"
                android:layout_height="@dimen/profile_pic_size"
                android:src="@drawable/no_img" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vishal"
                android:textSize="14sp"
                android:textColor="#fff" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/user_bal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10000"
                android:textSize="35sp"
                android:textColor="@color/bal_text_color" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/login"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/menu_item_bg"
                android:drawableLeft="@drawable/profile"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:text="Login"
                android:textSize="20sp"
                android:textColor="#fff" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/login_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/divide_two_color" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/my_account"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/menu_item_bg"
                android:drawableLeft="@drawable/profile"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:text="My Account"
                android:textSize="20sp"
                android:textColor="#fff" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/my_account_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/divide_two_color" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/inbox"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/menu_item_bg"
                android:drawableLeft="@drawable/inbox"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:text="Inbox"
                android:textSize="20sp"
                android:textColor="#fff" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/inbox_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/divide_two_color" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/user_settings"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/menu_item_bg"
                android:drawableLeft="@drawable/setting"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:text="User Settings"
                android:textSize="20sp"
                android:textColor="#fff" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/user_settings_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/divide_two_color" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/app_settings"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/menu_item_bg"
                android:drawableLeft="@drawable/setting"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:text="App Settings"
                android:textSize="20sp"
                android:textColor="#fff" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/app_settings_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/divide_two_color" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/invite_a_friend"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/menu_item_bg"
                android:drawableLeft="@drawable/setting"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:text="Invite Friend"
                android:textSize="20sp"
                android:textColor="#fff" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/invite_a_friend_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/divide_two_color" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/locate_ret"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/menu_item_bg"
                android:drawableLeft="@drawable/setting"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:text="Locate Retailer"
                android:textSize="20sp"
                android:textColor="#fff" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/locate_ret_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/divide_two_color" />

            <com.skilrock.customui.CustomTextView
                android:id="@+id/logout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/menu_item_bg"
                android:drawableLeft="@drawable/logout"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="left|center"
                android:text="Logout"
                android:textSize="20sp"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>

    <com.skilrock.customui.CustomTextView
        android:id="@+id/footer_info"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/divide_two_color"
        android:gravity="center"
        android:text="@string/copyright"
        android:textSize="15sp"
        android:textColor="#fff" />

</RelativeLayout>