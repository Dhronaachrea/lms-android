<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/draw_res_main_lay"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/last_draw_res_list_row_height"
        android:gravity="center"
        android:padding="2dp">

        <com.skilrock.customui.CustomTextView
            android:id="@+id/match"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/last_draw_res_list_row_tx_size"
            android:gravity="center"
            android:text="25"
            android:textColor="#4C4C4C" />

        <com.skilrock.customui.CustomTextView
            android:id="@+id/winner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="500"
            android:textSize="@dimen/last_draw_res_list_row_tx_size"
            android:textColor="#4C4C4C" />

        <com.skilrock.customui.CustomTextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30 draws ago"
            android:textSize="@dimen/last_draw_res_list_row_tx_size"
            android:textColor="#4C4C4C" />
    </LinearLayout>

</LinearLayout>